<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-tile d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="far fa-edit"></i></a>
                    </h5>
                </div>
                <div class="card-body">
                    <p>{{description}}</p>
                </div>
                <div class="card-footer">
                    <form action="/notes/delete/{{_id}}?_method=delete" method="post">
                        <input type="hidden" value="delete" name="_method">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>