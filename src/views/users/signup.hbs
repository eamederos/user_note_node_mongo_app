<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="post">
                    <div class="form-group">
                        <input class="form-control" name="name" placeholder="Name..." type="text" value={{name}}>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="email" placeholder="Email..." type="email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="password" type="password">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="confirm_password" type="password">
                    </div>
                    <button class="btn btn-primary btn-block">Sing Up</button>
                </form>
            </div>
        </div>
    </div>
</div>